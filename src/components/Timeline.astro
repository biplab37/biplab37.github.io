---
import { institute_list } from "@/content/data";
---

<ol class="relative border-e border-gray-400">
    {
        institute_list.map((institute) => (
            <li class="my-10 me-4">
                <div class="absolute w-3 h-3 bg-gray-400 mt-1.5 -end-[0.4rem] border border-white rounded-full" />
                <h3 class="text-right text-lg font-semibold tracking-wider">
                    {institute.name}
                </h3>
                <p class="text-right text-slate-600">{institute.year}</p>
                <p class="text-right font-serif italic">
                    {institute.designation}
                </p>
            </li>
        ))
    }
</ol>
